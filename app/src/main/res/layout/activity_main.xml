<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#101820"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:text="ðŸ§® Smart Calculator"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Number Input Fields -->
        <EditText
            android:id="@+id/num1"
            android:hint="Enter first number"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:hintTextColor="#888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_input"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/num2"
            android:hint="Enter second number"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:hintTextColor="#888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_input"
            android:padding="16dp"
            android:layout_marginBottom="20dp" />

        <!-- Button Groups: Row 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <Button android:id="@+id/btnAdd"
                android:text="+"
                style="@style/CalcButton" />

            <Button android:id="@+id/btnSub"
                android:text="-"
                style="@style/CalcButton" />

            <Button android:id="@+id/btnMul"
                android:text="Ã—"
                style="@style/CalcButton" />

            <Button android:id="@+id/btnDiv"
                android:text="Ã·"
                style="@style/CalcButton" />
        </LinearLayout>

        <!-- Button Groups: Row 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <Button android:id="@+id/btnMod"
                android:text="%"
                style="@style/CalcButton" />

            <Button android:id="@+id/btnSquare"
                android:text="xÂ²"
                style="@style/CalcButton" />

            <Button android:id="@+id/btnSqrt"
                android:text="âˆš"
                style="@style/CalcButton" />

            <Button android:id="@+id/btnClear"
                android:text="C"
                style="@style/CalcButton" />
        </LinearLayout>

        <!-- Button Groups: Row 3 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button android:id="@+id/btnLCM"
                android:text="LCM"
                style="@style/CalcButton" />

            <Button android:id="@+id/btnHCF"
                android:text="HCF"
                style="@style/CalcButton" />
        </LinearLayout>

        <!-- Result Display -->
        <TextView
            android:id="@+id/resultText"
            android:text="Result: "
            android:textSize="20sp"
            android:textColor="#00FFB7"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- History -->
        <TextView
            android:id="@+id/historyText"
            android:text="History:\n"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp" />

    </LinearLayout>
</ScrollView>
